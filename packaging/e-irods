#!/bin/sh -e

set -e

IRODS_HOME=/usr/share/eirods/iRODS
IRODS_CTL=./irodsctl

cd $IRODS_HOME


case $1 in
status)
    $IRODS_CTL status
    ;;
start)
    su --shell=/bin/bash -c "$IRODS_CTL start" eirods
    ;;
stop)
    su --shell=/bin/bash -c "$IRODS_CTL stop" eirods
    ;;
restart)
    su --shell=/bin/bash -c "$IRODS_CTL restart" eirods
    ;;
*)
    echo "/etc/init.d/e-irods :: [$1] is not supported."
    exit 1
esac
